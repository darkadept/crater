{
  "presets": ["es2015", "stage-1", "react", "flow"],
  "plugins": [
    ["transform-runtime", {"polyfill": false, "helpers": false}],
    "meteor-imports",
    ["module-resolver", {
      "root": [
        "./build/meteor/bundle/programs/server/node_modules",
        "./build/meteor/bundle/programs/server/npm/node_modules"
      ]
    }]
  ],
  "env": {
    "coverage": {
      "plugins": ["istanbul"]
    }
  }
}

